{
  "name": "msm",
  "version": "1.0.0",
  "main": "dist/CollectionProcessor.js",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "prepackage": "npm run build",
    "package": "pkg .",
    "prestart": "npm run build",
    "start": "cross-env CONFIG_FOLDER=./test/resources MSM_TYPES=./src/msmTypes node ./dist/CollectionProcessor.js",
    "containerize": "docker build --tag ghcr.io/agile-learning-institute/msm:latest .",
    "precontainer": "npm run containerize && docker compose down",
    "container": "docker compose up --detach"
  },
  "bin": "dist/CollectionProcessor.js",
  "pkg": {
    "targets": [
      "node14-linux-x64",
      "node14-win-x64",
      "node14-macos-x64"
    ],
    "outputPath": "build"
  },
  "dependencies": {
    "mongodb": "^6.5.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.3"
  }
}