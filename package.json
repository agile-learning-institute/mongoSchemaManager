{
  "name": "msm",
  "version": "1.1.0",
  "main": "dist/CollectionProcessor.js",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "prestart": "npm run composeDown && npm run build && npm run composeUpDb",
    "start": "cross-env CONFIG_FOLDER=./test/resources MSM_TYPES=./src/msmTypes node ./dist/CollectionProcessor.js",
    "precontainer": "npm run composeDown && npm run containerize",
    "container": "npm run composeUpTest && docker-compose logs -f 'msm'",
    "containerize": "docker build --tag ghcr.io/agile-learning-institute/msm:latest .",
    "composeDown": "docker compose --profile mongodb down && docker compose --profile testing down",
    "composeUpDb": "docker compose --profile mongodb up --detach",
    "composeUpTest": "docker compose --profile testing up --detach",
    "prepackage": "npm run build",
    "package": "pkg ."
  },
  "bin": "dist/CollectionProcessor.js",
  "pkg": {
    "targets": [
      "node14-linux-x64",
      "node14-win-x64",
      "node14-macos-x64"
    ],
    "outputPath": "build"
  },
  "dependencies": {
    "mongodb": "^6.5.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.3"
  }
}